<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="./images/icons/logo.png" type="image/x-icon">
    <title>EXCHME - Change Password</title>
    <script defer src="/js/app.js"></script>
    <link href="/styles/app.css" rel="stylesheet">
</head>
<body>
  <%- include('./partials/preloader') %>;

  <!-- header start -->
   
  <%- include('./partials/header') %>;

  <!-- header end -->

    <!-- Preloader and Header (Optional, include if consistent with other pages) -->

    <!-- main start -->
    <main class="min-h-screen">

    <!-- Change Details section start -->
    <section class="section-pt overflow-hidden bg-[url('../images/photos/authBG.png')] bg-no-repeat bg-cover">
        <div class="container section-py">
            <div class="grid xl:grid-cols-12 lg:grid-cols-2 grid-cols-1 items-center gap-x-24p gap-y-60p">
                <div class="xl:col-start-1 xl:col-end-7">
                    <div class="card-1 p-32p">
                        <h3 class="text-32 text-white mb-16p">
                            Update Your Details
                        </h3>
                        <p class="text-base text-white mb-40p">
                            Change your email or update your password below.
                        </p>
                        <form action="/change-password" method="POST">
                            <div class="grid grid-cols-6 gap-24p mb-16p">
                                
                                <!-- Optional Email Field -->
                                <div class="col-span-6">
                                    <label for="email" class="text-18 text-white mb-16p">New Email (optional)</label>
                                    <input
                                        autocomplete="off"
                                        type="email"
                                        id="email"
                                        name="email"
                                        class="box-input-5 border-glass-3"
                                        placeholder="Enter New Email..."
                                    />
                                </div>
                        
                                <!-- Current Password Field -->
                                <div class="col-span-6">
                                    <label for="currentPassword" class="text-18 text-white mb-16p">Current Password</label>
                                    <input
                                        autocomplete="off"
                                        type="password"
                                        id="currentPassword"
                                        name="currentPassword"
                                        class="box-input-5 border-glass-3"
                                        placeholder="Enter Current Password..."
                                        required
                                    />
                                </div>
                        
                                <!-- New Password Field -->
                                <div class="col-span-6">
                                    <label for="newPassword" class="text-18 text-white mb-16p">New Password</label>
                                    <input
                                        autocomplete="off"
                                        type="password"
                                        id="newPassword"
                                        name="newPassword"
                                        class="box-input-5 border-glass-3"
                                        placeholder="Enter New Password..."
                                        required
                                    />
                                </div>
                        
                                <!-- Confirm New Password Field -->
                                <div class="col-span-6">
                                    <label for="confirmNewPassword" class="text-18 text-white mb-16p">Confirm New Password</label>
                                    <input
                                        autocomplete="off"
                                        type="password"
                                        id="confirmNewPassword"
                                        name="confirmNewPassword"
                                        class="box-input-5 border-glass-3"
                                        placeholder="Confirm New Password..."
                                        required
                                    />
                                </div>
                            </div>
                        
                            <!-- Submit Button -->
                            <button type="submit" class="btn-md btn-primary">
                                Save Changes
                                <i class="ph ph-arrow-right icon-20"></i>
                            </button>
                        </form>
                        
                        
                    </div>
                </div>
                <div class="xl:col-start-8 xl:col-end-13">
                    <img
                        class="lg:max-w-[unset] animate-bounce-slow-top"
                        src="/images/photos/authBanner.png"
                        alt="Update Details Banner"
                    />
                </div>
            </div>
        </div>
    </section>
    <!-- Change Details section end -->

    </main>
    <!-- main end -->
    <%- include('./partials/footer') %>

</body>
</html>
