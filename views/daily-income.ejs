  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

.main-offer h2 {
  font-size: 32px;
  margin-bottom: 20px;
  font-weight: bold;
}

.main-offer p {
  font-size: 18px;
  margin-bottom: 30px;
  line-height: 1.6;
}

.cta-btn {
  display: inline-block;
  text-decoration: none;
  /* background-color: #fff; */
  color: #6eb0f3;
  padding: 12px 25px;
  font-size: 16px;
  font-weight: bold;
  border-radius: 8px;
  box-shadow: 0 3px 8px rgba(0, 0, 0, 0.2);
