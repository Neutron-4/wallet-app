    <style>
        /* General Styles */
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Header styles */
        header {
            height: 100px;
        }

        .product-section {
            max-width: 1200px;
            margin: auto;
            padding: 20px;
            margin-top: 20px;
        }

        .product-banner {
            color: #ffffff;
            padding: 20px;
            text-align: center;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .product-banner .title {
            font-size: 24px;
            font-weight: bold;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }

        /* Tabs Styles */
        .tabs-container {
            border: 1px solid #ccc;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        .tabs-nav {
            display: flex;
            border-bottom: 1px solid #ccc;
        }

        .tab {
            padding: 15px 20px;
            cursor: pointer;
            flex: 1;
            text-align: center;
            color: white;
            background-color: rgb(46 14 77 / var(--tw-bg-opacity));
            font-weight: bold;
            font-size: 25px;
        }

        .tab:hover {
            background: #308cee;
        }

        .tab--active {
            background: #146ecd;
            color: white;
        }

        .tab--active.real-estate {
            background: #28a745;
        }

        /* Content area for filtered posts */
        .tabs-content {
            padding: 20px;
            background: rgb(46 14 77 / var(--tw-bg-opacity));
        }

        /* Container styles for the product cards */
        .product-cards {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            /* Default to 3 cards per row */
            gap: 20px;
            margin-top: 20px;
            opacity: 1;
            /* Initial state for fade-in */
            transition: opacity 0.5s ease;
            /* Smooth fade transition */
        }

        .card-item {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
            overflow: hidden;
            transition: transform 0.3s ease;
            display: block;
        }

        .card-item:hover {
            transform: translateY(-10px);
        }

        .card-header img {
            width: 100%;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            height: 200px;
            object-fit: cover;
        }

        .card-body {
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card-body .tag {
            color: black;
            font-size: large;
            padding: 5px 10px;
            border-radius: 5px;
            margin-bottom: 10px;
            display: inline-block;
            background-color: #f1f1f1;
        }

        .card-body p {
            font-size: 14px;
            color: #555;
            margin-bottom: 15px;
        }

        /* Income details container */
        .income-info {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
        }

        .income-info div {
            flex: 1;
        }

        .income-info .label {
            font-weight: bold;
            text-align: left;
        }

        .income-info .value {
            text-align: right;
        }

        /* Styling for the no posts message */
        .no-products {
            text-align: center;
            font-size: 18px;
            color: #e74c3c;
        }

        /* Basic Styles for Buy Product Button */
        .buy-section {
            margin-top: 20px;
            text-align: center;
        }

        /* The Buy Button */
        .buy-button {
            background-color: #345bd1;
            color: white;
            padding: 12px 20px;
            font-size: 16px;
            font-weight: bold;
            text-decoration: none;
            border-radius: 5px;
            display: inline-block;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        /* Button Hover Effect */
        .buy-button:hover {
            background-color: #2a4ca3;
            transform: scale(1.05);
        }

        /* Button Focus Style */
        .buy-button:focus {
            outline: 2px solid #fff;
        }

        /* Mobile Responsiveness */
        @media (max-width: 1200px) {
            .product-cards {
                grid-template-columns: repeat(2, 1fr);
                /* Two cards per row for medium screens */
                width: 90%;
                margin: auto;
            }
        }

        @media (max-width: 768px) {
            .product-cards {
                grid-template-columns: 1fr;
                /* One card per row on mobile */
                width: 90%;
                margin: auto;
            }

            .card-item {
                width: 100%;
                /* Ensure cards take up full width */
            }

            .buy-button {
                width: 100%;
                padding: 15px 0;
                font-size: 18px;
            }

            /* Stack the tabs vertically on smaller screens */
            .tabs-nav {
                flex-direction: column;
                /* Change to vertical stack */
            }

            .tab {
                padding: 12px 15px;
                font-size: 14px;
                width: 100%;
                /* Make each tab take the full width */
                text-align: left;
                /* Align tab text to the left */
            }

            /* Adjust the active tab styling */
            .tab--active {
                background: #007bff;
                color: white;
            }

            .tab--active.real-estate {
                background: #28a745;
            }
        }

        /* Ensure tabs are aligned in a row again when on larger screens */
        @media (min-width: 769px) {
            .tabs-nav {
                flex-direction: row;
                /* Horizontal alignment for larger screens */
            }

            .tab {
                padding: 15px 20px;
                font-size: 16px;
            }
        }
        /* General Reset */
 /* Centering Main Offer */
.center-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px; /* Optional: Prevents content from touching the edges */
}

.main-offer {
  max-width: 600px;
  background: linear-gradient(135deg, #1c7ad7, #5402ac);
  color: #fff;
