    </style>
</head>

<body>
    <!-- <%- include('./partials/preloader') %>; -->

        <!-- header start -->
        <%- include('./partials/header') %>;
            <br><br><br><br><br><br>
            <section class="bg-[url('../images/photos/authBG.png')] bg-no-repeat bg-cover">
                <div class="product-section ">
                    <div class="center-wrapper">
                        <div class="main-offer">
                          <h2>Get 10% on Daily Income for 3 Months</h2>
                          <p>Enjoy an additional 10% on your daily income for the next 3 months when you make a minimum purchase of 3 units of any product type.</p>
                          <a href="#title" class="cta-btn">Shop Now</a>
                        </div>
                      </div>
                    <div class="product-banner ">
                        <div id="title" class="title">All Investable Products </div> <br><br>
                    </div>

                    <div class="tabs-container">
                        <div class="tabs-nav">
                            <div class="tab tab--active" onclick="changeTab('daily')">Crypto</div>
                            <div class="tab" onclick="changeTab('real-estate')">Real Estate</div>
                        </div>
                        <div class="tabs-content">
                            <div class="product-list">
                                <div class="main-content">
                                    <div class="product-cards">
                                        <% if (posts.length> 0) { %>
                                            <% posts.forEach(post=> { %>
                                                <div
                                                    class="card-item <%= (post.category === 'dailyIncome') ? 'crypto-card' : (post.category === 'realEstate' ? 'real-estate-card' : '') %>">
                                                    <div class="card-header">
                                                        <img src="<%= post.thumbnail ? '/posts/' + post.thumbnail : 'https://exchme.com/images/icons/logo.png' %>"
                                                            alt="thumbnail" />
                                                    </div>
                                                    <div class="card-body">
                                                        <span class="tag"
                                                            style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; font-size: 17px; font-weight: 600;">
                                                            <%= post.title %>
                                                        </span>
                                                        <p style="font-weight: 600;  font-size: 17px;">
                                                            <%= post.description %>
                                                        </p>

                                                        <!-- Income details aligned left and right -->
                                                        <div class="income-info">
                                                            <div class="label">Daily Income:</div>
                                                            <div class="value">₹<%= post.daily_income %>
                                                            </div>
                                                        </div>
                                                        <div class="income-info">
                                                            <div class="label">Monthly Income:</div>
                                                            <div class="value">₹<%= post.daily_income * 30 %>
                                                            </div>
                                                        </div>
                                                        <div class="income-info">
                                                            <div class="label">Yearly Income:</div>
                                                            <div class="value">₹<%= post.daily_income * 365 %>
                                                            </div>
                                                        </div>
                                                        <div class="buy-section">
                                                            <a href="/checkout/<%=post.blogid%>" class="buy-button">🛒
                                                                Buy Product</a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% }) %>
                                                    <% } else { %>
                                                        <p class="no-products">There are no blog posts available.</p>
                                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="flex-c text-white  mb-4">
                    <div class="flex-c" style="font-size: 25px;">Invite friends and earn rewards! Share your referral
                        code and level up!</div>
                </div>
                <div class="flex justify-center items-center">
                    <a class="button ml-2" href="/user/refferal">Join Referral Program</a>
                </div>
              
                  
                <br>
            </section>
            <style>
                .button {
                    background: linear-gradient(45deg, #ffbb33, #ff6f61);
                    padding: 15px 60px;
                    border: none;
                    border-radius: 8px;
                    color: white;
                    font-size: 20px;
                    font-weight: 600;
                    cursor: pointer;
                    transition: transform 0.3s ease, background 0.3s ease;
                    margin: auto;
                    display: flex;
                }

                .button:hover {
                    transform: scale(1.05);
                    background: linear-gradient(45deg, #ff6f61, #ffbb33);
                }
            </style>

            <script>
                function changeTab(tab) {
                    const tabs = document.querySelectorAll('.tab');
                    const allCards = document.querySelectorAll('.card-item');
                    const container = document.querySelector('.product-cards');

                    // Fade out the container (cards)
                    container.style.opacity = 0;

                    // Wait for the fade-out animation to complete (500ms)
                    setTimeout(() => {
                        tabs.forEach(t => {
                            t.classList.remove('tab--active', 'real-estate');
                        });

                        if (tab === 'daily') {
                            tabs[0].classList.add('tab--active');
                            tabs[1].classList.remove('tab--active');
                            allCards.forEach(card => {
                                if (card.classList.contains('crypto-card')) {
                                    card.style.display = 'block';
                                } else if (card.classList.contains('real-estate-card'))  {
                                    card.style.display = 'none';
                                }
                            });
                        } else if (tab === 'real-estate') {
                            tabs[1].classList.add('tab--active');
                            tabs[0].classList.remove('tab--active');
                            allCards.forEach(card => {
                                if (card.classList.contains('real-estate-card')) {
                                    card.style.display = 'block';
                                } else if (card.classList.contains('crypto-card')) {
                                    card.style.display = 'none';
                                }
                            });
                        }

                        // Fade in the container (cards)
                        container.style.opacity = 1;
                        
                    }, 500);
                }

                // Initialize default tab (Daily Income)
                document.addEventListener('DOMContentLoaded', () => {
                    changeTab('daily');
                });
            </script>

            <%- include('./partials/footer') %>

</body>

