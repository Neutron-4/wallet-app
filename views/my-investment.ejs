<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="shortcut icon" href="./images/icons/logo.png" type="image/x-icon" />
  <title>Exchme - Currency Exchange</title>
  <script defer src="/js/app.js"></script>
  <link href="/styles/app.css" rel="stylesheet" />
  <style>
    body {
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 0;
    }

    .transaction-status {
      padding: 8px 20px;
      border-radius: 30px;
      font-weight: bold;
      text-transform: capitalize;
      color: #fff;
      display: inline-block;
      border: 2px solid transparent;
      transition: all 0.3s ease;
      text-align: center;
    }

    .transaction-status-complete {
      background-color: #28a745;
      border-color: #1c7c32;
    }

    .transaction-status-denied {
      background-color: #dc3545;
      border-color: #b32d3e;
    }

    .transaction-status-pending {
      background-color: #ffc107;
      border-color: #d69f29;
    }

    .transaction-status:hover {
      opacity: 0.9;
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    }

    .table-container {
      width: 100%;
      overflow-x: auto;
      box-sizing: border-box;
      -webkit-overflow-scrolling: touch;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background-color: #1e1e1e;
      color: #fff;
      border-radius: 8px;
    }

    table th,
    table td {
      padding: 14px 20px;
      text-align: left;
      border-bottom: 1px solid #333;
    }

    table th {
      background-color: #333;
      font-weight: bold;
    }

    table tr:hover {
      background-color: #444;
      transform: translateY(-4px);
      cursor: pointer;
    }

    .scroll-to-top {
      position: fixed;
      bottom: 20px;
      right: 20px;
      background-color: #ff5722;
      color: #fff;
      border-radius: 50%;
      padding: 15px;
      font-size: 20px;
      display: none;
      cursor: pointer;
    }

    .scroll-to-top.show {
      display: block;
    }

    .section-pt {
      padding-top: 100px;
    }

    .section-py {
      padding: 60px 30px;
    }

    .card-container {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      justify-content: center;
      flex-direction: column;
      align-items: center;
    }

    .card-1 {
      border-radius: 12px;
      padding: 30px;
      width: 100%;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
    }

    .card-1 h2 {
      color: #fff;
      text-align: center;
      margin-bottom: 30px;
      font-size: 28px;
    }

    select {
      padding: 10px 15px;
      background-color: #333;
      color: #fff;
      border: none;
      border-radius: 8px;
      margin-bottom: 20px;
      width: 200px;
      font-size: 16px;
    }

    label {
      color: #ccc;
      margin-bottom: 5px;
      display: block;
    }

    .message {
      font-size: 18px;
      color: #ccc;
      text-align: center;
      margin-top: 30px;
    }

    @media (max-width: 768px) {
      .card-1 {
        padding: 20px;
      }

      select {
        width: 100%;
        font-size: 14px;
      }
    }

    table th:nth-child(1),
    table td:nth-child(1) {
      width: 200px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    table th:nth-child(2),
    table td:nth-child(2) {
      width: 150px;
    }

    table th:nth-child(3),
    table td:nth-child(3),
    table th:nth-child(4),
    table td:nth-child(4) {
      width: 180px;
    }
  </style>
</head>

<body>
  <!-- Preloader -->
  <%- include('./partials/preloader') %>

  <!-- Scroll to Top -->
  <div class="scroll-to-top show" id="scrollToTop">
    <i class="ph ph-arrow-fat-lines-up"></i>
  </div>

  <!-- Header -->
  <%- include('./partials/header') %>

    <section class="section-pt overflow-hidden bg-no-repeat bg-cover bg-[url('../images/photos/authBG.png')]">
      <div class="container section-py">
        <div class="card-container">
          <div class="card-1">
            <h2>My Investments</h2>

            <% if (investment.length > 0) { %>
              <label for="statusFilter">Filter By:</label>
              <select id="statusFilter" onchange="filterTable()">
                <option value="">All Status</option>
                <option value="Pending">Pending</option>
                <option value="Complete">Complete</option>
                <option value="Denied">Denied</option>
              </select>

              <div class="table-container">
                <table id="investmentTable">
                  <thead>
                    <tr>
                      <th>Product</th>
                      <th>Status</th>
                      <th>Invested Date</th>
                      <th>Expire on</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% investment.forEach(product => { %>
                      <tr class="<%= product.status.toLowerCase() %>"
                        onclick="window.location.href='/investment-details/<%= product.transaction_id %>'">
                        <td><%= product.title %></td>
                        <td>
                          <span class="transaction-status transaction-status-<%= product.status.toLowerCase() %>">
                            <%= product.status %>
                          </span>
                        </td>
                        <td><%= product.uploaded_date %></td>
                        <td><%= product.expiry_date %></td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <p class="message">You haven't made any investments yet.</p>
            <% } %>
          </div>
        </div>
      </div>
    </section>

  <!-- Footer -->
  <!-- <%- include('./partials/footer') %> -->

  <script>
    function filterTable() {
      const filterValue = document.getElementById("statusFilter").value.toLowerCase();
      const rows = document.querySelectorAll("#investmentTable tbody tr");

      rows.forEach(row => {
        const status = row.cells[1].textContent.toLowerCase().trim();
        row.style.display = (filterValue === "" || status === filterValue) ? "" : "none";
      });
    }

    document.getElementById("scrollToTop").addEventListener("click", () => {
      window.scrollTo({ top: 0, behavior: "smooth" });
    });
  </script>
</body>

</html>
