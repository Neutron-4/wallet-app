<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="./images/icons/logo.png" type="image/x-icon">
    <title>EXCHME - Currency Exchange</title>
    <script defer src="/js/app.js"></script>
    <link href="/styles/app.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            justify-content: center;
            align-items: center;
            height: 100vh;
            flex-direction: column;
            overflow-x: hidden;
        }

        .crypto-converter-wrapper {
            background: linear-gradient(145deg, #333, #1e1e1e);
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
            width: 100%;
            max-width: 500px;
            margin: auto;
            text-align: center;
        }

        .header-title {
            font-size: 28px;
            color: #EAEAEA;
            margin-bottom: 25px;
            font-weight: 600;
        }

        .input-field,
        .currency-selector,
        .action-button {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            border-radius: 12px;
            border: none;
            background-color: #131111;
            color: #EAEAEA;
            font-size: 16px;
            outline: none;
            transition: all 0.3s ease;
        }

        .input-field[type="number"]:focus,
        .currency-selector:focus {
            background-color: #444;
        }

        .action-button {
            background-color: #007BFF;
            color: white;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .action-button:hover {
            background-color: #0056b3;
        }

        .conversion-result {
            margin-top: 20px;
            font-size: 20px;
            color: #007BFF;
            font-weight: 500;
        }

        .footer-section {
            margin-top: 30px;
            font-size: 14px;
            color: #777;
        }

        .footer-section a {
            color: #007BFF;
            text-decoration: none;
        }

        .quick-buttons {
            display: flex;
            justify-content: center;
            gap: 12px;
            margin-top: 20px;
        }

        .quick-buttons button {
            background-color: #444;
            color: white;
            font-size: 16px;
            padding: 15px;
            border-radius: 12px;
            cursor: pointer;
            border: none;
            transition: background-color 0.3s ease;
        }

        .quick-buttons button:hover {
            background-color: #007BFF;
        }

        /* Toast Notification Styles */
        .toast {
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #333;
            color: #fff;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            display: none;
            z-index: 1000;
            font-size: 16px;
            animation: fadeIn 0.5s ease, fadeOut 0.5s 2.5s forwards;
        }

        @keyframes fadeIn {
            0% {
                opacity: 0;
                transform: translateX(-50%) translateY(-20px);
            }

            100% {
                opacity: 1;
                transform: translateX(-50%) translateY(0);
            }
        }

        @keyframes fadeOut {
            100% {
                opacity: 0;
                transform: translateX(-50%) translateY(-20px);
            }
        }

        /* Confirmation Modal Styles */
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            display: none;
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background: #1f1f1f;
            padding: 30px;
            border-radius: 15px;
            width: 100%;
            max-width: 400px;
            text-align: center;
            position: relative;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        .modal-content h3 {
            font-size: 24px;
            margin-bottom: 15px;
            color: #fff;
        }

        .modal-content p {
            font-size: 16px;
            color: #ccc;
        }

        .modal-content button {
            margin-top: 20px;
            background-color: #007BFF;
            color: white;
            padding: 15px 25px;
            width: auto;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            border: none;
            transition: background-color 0.3s ease;
        }

        .modal-content button:hover {
            background-color: #0056b3;
        }

        .close-modal {
            position: absolute;
            top: 15px;
            right: 15px;
            font-size: 24px;
            color: white;
            cursor: pointer;
        }

        /* Responsive Design */
        @media (max-width: 600px) {
            .crypto-converter-wrapper {
                padding: 20px;
            }

            .modal-content {
                padding: 20px;
                max-width: 90%;
            }

            .toast {
                width: 80%;
                font-size: 14px;
                padding: 10px;
            }

            .action-button,
            .modal-content button {
                font-size: 14px;
                padding: 10px 20px;
            }
        }

        .custom-note {
            color: #fff;
            font-size: 16px;
            font-weight: 400;
            margin-top: 20px;
            text-align: center;
            line-height: 1.6;
            background-color: #444;
            padding: 12px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
        }

        .custom-note:hover {
            background-color: #555;
        }
    </style>
</head>

<body>
    <%-include('partials/preloader') %>
        <%-include('partials/header') %>

            <div class="scroll-to-top show" id="scrollToTop">
                <i class="ph ph-arrow-fat-lines-up"></i>
            </div>

            <main>
                <section class="pb-80p pt-6 overflow-visible">
                    <br><br><br><br><br>
                    <div class="container mt-24p">
                        <div class="crypto-converter-wrapper">
                            <h2 class="header-title">Crypto Currency Converter</h2>

                            <form action="/currency-exchange" method="post" id="currency-Exchange-Form">
                                <input id="amount" name="amount" class="input-field" type="number"
                                    onkeyup="convertAmount()" placeholder="Enter Amount" />
                                <input id="Calculatedresult" name="result" type="text" hidden />
                                <select onchange="convertAmount()" name="currency" id="cryptoSelect"
                                    class="currency-selector">
                                    <option value="bitcoin">Bitcoin (BTC)</option>
                                    <option value="USDT">Tether (USDT)</option>
                                </select>

                                <select id="currencySelect" class="currency-selector">
                                    <option value="inr">Indian Rupee (INR)</option>
                                </select>
                                <p class="custom-note">Note: Not sure about the exact value? Use the 'Custom' option to
                                    get the accurate Bitcoin or USDT price.</p>
                            </form>

                            <div class="quick-buttons">
                                <button onclick="setCustomAmount(1000)">1000</button>
                                <button onclick="setCustomAmount(5000)">5000</button>
                                <button onclick="setCustomAmount(10000)">10000</button>
                                <button onclick="setCustomAmount(50000)">50000</button>
                                <button onclick="openModal()">Custom</button>
                            </div>

                            <button class="action-button" onclick="convertCurrency()">Convert</button>

                            <h3 id="result" class="conversion-result">0</h3>

                            <p class="footer-section">Powered by <a href="https://exchme.com/">Exchme</a></p>
                        </div>
                    </div>
                </section>
            </main>

            <div id="customModal" class="modal-overlay">
                <div class="modal-content">
                    <span class="close-modal" onclick="closeModal()">&times;</span>
                    <h3>Enter Custom Amount</h3>
                    <p class="custom-note">Note: Enter your desired amount that you want to convert to Bitcoin or USDT.</p>

                    <input type="number" id="customAmount" placeholder="Enter Amount" />
                    <button onclick="setCustomAmount('')">Submit</button>
                </div>
            </div>

            <div id="toast" class="toast">Please enter a valid amount.</div>

            <div id="confirmationModal" class="modal-overlay">
                <div class="modal-content">
                    <span class="close-modal" onclick="closeConfirmationModal()">&times;</span>
                    <h3>Proceed with Conversion</h3>
                    <p id="confirmationMessage">You are about to convert X amount of [Bitcoin/usdt]. You will get Y
                        amount of Rupee. Do you want to proceed?</p>
                    <button onclick="proceedConversion()">Proceed</button>
                    <button onclick="cancelConversion()">Cancel</button>
                </div>
            </div>

            <%-include('partials/footer') %>

                <<script>
                    const btcDeposit = parseFloat(<%= btcDeposit %>);
                    const btcWithdraw = parseFloat(<%= btcWithdraw %>);
                    const usdtDeposit = parseFloat(<%= usdtDeposit %>);
                    const usdtWithdraw = parseFloat(<%= usdtWithdraw %>);

                    let quickValueSet = false;

                    function setQuickValue(value) {
                        document.getElementById('amount').value = value;
                        quickValueSet = true;
                    }

                    function openModal() {
                        document.getElementById('customModal').style.display = 'flex';
                    }

                    function closeModal() {
                        document.getElementById('customModal').style.display = 'none';
                    }
                    let res = 0;



                    function setCustomAmount(amount) {
                        let customAmount = amount;
                            let hiddenResult = parseFloat(document.getElementById('Calculatedresult').value);

                        if (amount == '') {
                            customAmount = parseFloat(document.getElementById('customAmount').value);
                            // const customAmount = amount;
                        }
                        const crypto = document.getElementById('cryptoSelect').value;  // Get selected crypto
                        const currency = document.getElementById('currencySelect').value;  // Get selected currency

                        let res = 0;  // Declare res variable
                        console.log(customAmount, typeof customAmount);


                        if (customAmount && customAmount > 0) {
                            if (crypto === 'bitcoin') {
                                if (currency === 'inr') {
                                    res = customAmount / btcWithdraw;  // Use btcWithdraw for Bitcoin
                                }
                            } else if (crypto === 'USDT') {  // Make sure the value matches exactly ('tether' instead of 'USDT')
                                if (currency === 'inr') {
                                    res = customAmount / usdtWithdraw;  // Use usdtWithdraw for Tether
                                }
                            }
                            hiddenResult = res ;
                            console.log(res , typeof res );
                            

                            // Update the amount field with the result
                            document.getElementById('amount').value = res;
                            closeModal();  // Close the modal after setting the amount
                        } else {
                            showToast('Please enter a valid custom amount.');
                        }
                        convertAmount()
                    }


                    function showToast(message) {
                        const toast = document.getElementById('toast');
                        toast.textContent = message;
                        toast.style.display = 'block';
                        setTimeout(() => {
                            toast.style.display = 'none';
                        }, 3000);
                    }

                    function convertAmount() {
                        const amount = parseFloat(document.getElementById('amount').value);
                        const crypto = document.getElementById('cryptoSelect').value;
                        let hiddenResult = parseFloat(document.getElementById('Calculatedresult').value);
                        const currency = document.getElementById('currencySelect').value;
                        let result = 0;

                        if (amount < 0 || !amount) {
                            showToast('Please enter a valid amount');
                            return;
                        }w
                        console.log(btcDeposit,usdtDeposit);
                        console.log(btcWithdraw,usdtWithdraw)
                        

                        if (crypto === 'bitcoin') {
                            if (currency === 'inr') {
                                result = amount * btcDeposit;
                            }
                        } else if (crypto === 'USDT') {
                            if (currency === 'inr') {
                                result = amount * usdtDeposit;
                            }
                        }

                        hiddenResult = result ; 
                        document.getElementById('result').textContent = result;

                    }

                    function convertCurrency() {
                        const amount = parseFloat(document.getElementById('amount').value);
                        const crypto = document.getElementById('cryptoSelect').value;
                        const currency = document.getElementById('currencySelect').value;
                        let result = 0;
                        let hiddenResult = parseFloat(document.getElementById('Calculatedresult').value);

                        if (amount < 0 || !amount) {
                            showToast('Please enter a valid amount');
                            return;
                        }

                        if (crypto === 'bitcoin') {
                            if (currency === 'inr') {
                                result = amount * btcDeposit;
                            }
                        } else if (crypto === 'USDT') {
                            if (currency === 'inr') {
                                result = amount * usdtDeposit;
                            }
                        }
                        hiddenResult = result ; 

                        document.getElementById('result').textContent = result;

                        const confirmationMessage = `You are about to convert ${amount} ${crypto.toUpperCase()} to INR. You will get ${result} INR. Do you want to proceed?`;
                        document.getElementById('confirmationMessage').textContent = confirmationMessage;
                        document.getElementById('confirmationModal').style.display = 'flex';

                        // Store the form to submit on proceed
                        // const form = document.getElementById('currency-Exchange-Form');
                        // form.submit();
                    }

                    function closeConfirmationModal() {
                        document.getElementById('confirmationModal').style.display = 'none';
                    }

                    function proceedConversion() {
                        const form = document.getElementById('currency-Exchange-Form');
                            form.submit();
                        closeConfirmationModal();
                    }

                    function cancelConversion() {
                        closeConfirmationModal();
                    }


                    window.addEventListener('keydown', function (event) {
                        if (event.key === 'Escape') {
                            closeModal();
                            closeConfirmationModal();
                        }
                    });



                </script>
</body>

</html>