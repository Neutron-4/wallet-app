<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EXCHME Blog Dashboard</title>
    <link rel="stylesheet" href="/styles/admin.css">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            /* Use a more modern font */
            background-color: #f4f4f9;
            color: #333;
            display: flex;
            height: 100vh;
        }

        /* Main content styles */
        .main-content {
            margin-left: 250px;
            padding: 20px;
            width: 100%;
            overflow-y: auto;
        }

        /* Main action button (e.g., Add Product, etc.) */
        .main-content a {
            display: inline-block;
            margin-bottom: 20px;
            padding: 10px 20px;
            background-color: #27ae60;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

        .main-content a:hover {
            background-color: #2ecc71;
        }

        /* Container styles (grid for cards) */
        .container {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            /* Three cards per row */
            gap: 20px;
            margin-top: 20px;
        }

        .card {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
            /* Enhance shadow on hover */
        }

        .card-header img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .card-body {
            padding: 20px;
        }

        /* Title in each card - bold and larger */
        .card-body .title {
            font-weight: bold;
            font-size: 18px;
            margin-bottom: 10px;
            color: #333;
        }

        /* Description of each card */
        .card-body .description {
            font-size: 14px;
            color: #777;
            margin-bottom: 15px;
        }

        /* Tag or category in the card */
        .card-body .tag {
            background-color: #3498db;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            margin-bottom: 10px;
            display: inline-block;
        }

        /* Income details - labels and values */
        .income-details {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
        }

        .income-details .label {
            font-weight: bold;
            text-align: left;
        }

        .income-details .value {
            text-align: right;
        }

        /* User info section - for user profile or author info */
        .user {
            display: flex;
            align-items: center;
        }

        .user img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .user-info small {
            color: #7f8c8d;
            font-size: 12px;
        }

        /* Edit button inside the card */
        .edit-button {
            display: inline-block;
            padding: 8px 15px;
            background-color: #f39c12;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-size: 14px;
            margin-top: 10px;
            transition: background-color 0.3s ease;
        }

        .edit-button:hover {
            background-color: #e67e22;
        }

        /* No posts message */
        .no-posts {
            text-align: center;
            font-size: 18px;
            color: #e74c3c;
        }

        /* Responsive adjustments */
        @media screen and (max-width: 900px) {
            .container {
                grid-template-columns: repeat(2, 1fr);
                /* Two cards per row on medium screens */
            }
        }

        @media screen and (max-width: 600px) {
            .container {
                grid-template-columns: 1fr;
                /* One card per row on small screens */
            }

            .main-content {
                margin-left: 0;
                padding: 10px;
            }
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="brand">
            <a href="/admin/dashboard">
                <h1>EXCHME Website</h1>
            </a>
        </div>
        <nav>
            <ul>
                <li><a href="/admin/update-payment-methods">Payment Methods</a></li>
                <li><a href="/admin/users">Users</a></li>
                <li><a href="/admin/transactions">Transactions</a></li>
                <li><a href="/admin/orders">Orders</a></li>
                <li><a href="/admin/currencyrate">Currency Rate</a></li>
                <li><a href="/admin/posts">Posts</a></li>
                <li><a href="/admin/offers">Offers</a></li>
        <li><a href="/admin/refferal-details">Referral Commisions</a></li>
        <li><a href="/admin/setting">Setting</a></li>
            </ul>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content section-pt">
        <a href="/admin/post">Create New Post</a>

        <div class="container">
            <% if (posts.length> 0) { %>
                <% posts.forEach(post=> { %>
                    <div class="card">
                        <div class="card-header">
                            <img src="/posts/<%= post.thumbnail %>" alt="city" />
                        </div>
                        <div class="card-body">
                            <div class="title">
                                <%= post.title %>
                            </div> <!-- Bold title -->
                            <div class="description">
                                <%= post.description %>
                            </div> <!-- Description -->

                            <!-- Income details aligned left and right -->
                            <div class="income-details">
                                <div class="label">Daily Income:</div>
                                <div class="value">₹<%= post.daily_income %>
                                </div>
                            </div>
                            <div class="income-details">
                                <div class="label">Monthly Income:</div>
                                <div class="value">₹<%= post.monthly_income %>
                                </div>
                            </div>
                            <div class="income-details">
                                <div class="label">Yearly Income:</div>
                                <div class="value">₹<%= post.yearly_income %>
                                </div>
                            </div>
                        </div>
                        <a href="/admin/post/<%= post.blogid %>" class="edit-button">Edit</a>

                    </div>
                    <% }) %>
                        <% } else { %>
                            <p class="no-posts">There are no blog posts available.</p>
                            <% } %>
        </div>
    </div>
</body>

</html>