<!DOCTYPE html>
<html dir="ltr" lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="./images/icons/logo.png" type="image/x-icon">
  <title>EXCHME - Currency Exchange</title>
  <script defer="" src="/js/app.js"></script>
  <link href="/styles/app.css" rel="stylesheet">
</head>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.19.0/cdn/themes/light.css" />
<script type="module"
  src="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.19.0/cdn/shoelace-autoloader.js"></script>

<body>

  <!-- preloader start -->
  <%- include('./partials/preloader') %>;

    <!-- preloader end -->

    <!-- scroll to top button start -->
    <div class="scroll-to-top show" id="scrollToTop">
      <i class="ph ph-arrow-fat-lines-up"></i>
    </div>
    <!-- scroll to top button end -->

    <!-- header start -->

    <%- include('./partials/header') %>;


      <!-- header end -->

      <!-- main start -->
      <main class="min-h-screen">

        <!-- Privacy Policy Beadcrumb start -->
        <section class="section-pt bg-[url('../images/photos/beadcrumbBG.png')] bg-no-repeat bg-cover">
          <div class="container">
            <div class="grid md:grid-cols-2 grid-cols-1 justify-between gap-24p">
              <div class="pt-60p">
                <h2 class="text-40 text-white mb-32p text-split-left">Contact Us</h2>
                <ul class="flex-y *:flex-y flex-wrap gap-1 text-base text-white mb-60p *:transition-1">
                  <li class="hover:text-warning">
                    <a href="./index">Home</a>
                  </li>
                  <li>
                    <i class="ph ph-caret-right"></i>
                  </li>
                  <li class="hover:text-warning">
                    <a href="./index">More</a>
                  </li>
                  <li>
                    <i class="ph ph-caret-right"></i>
                  </li>
                  <li class="text-warning">
                    <span>Contact Us</span>
                  </li>
                </ul>
              </div>
              <div class="flex md:justify-end">
                <img class="animate-bounce-slow-left" src="/images/photos/beadcrumbBanner2.png" alt="beadcrumb">
              </div>
            </div>
          </div>
        </section>
        <!-- Privacy Policy Beadcrumb end -->

        <!--  section start -->
        <section class="section-py">
          <div class="container">
            <div class="flex-col-c text-center mb-60p">
              <div class="max-w-[642px]">
                <span class="badge badge-circle badge-secondary mb-16p">
                  <i class="badge badge-dot bg-white"></i>
                  Contact Us
                </span>
                <h2 class="text-40 text-white text-split-top">
                  Let Us Help You
                </h2>
              </div>
            </div>
            <div class="grid lg:grid-cols-12 grid-cols-1 gap-24p">
              <div class="xl:col-span-4 lg:col-span-5">
                <div class="grid lg:grid-cols-1 md:grid-cols-3 grid-cols-1 gap-24p">
                  <div
                    class="card-1 flex max-lg:flex-wrap max-md:flex-nowrap items-start gap-24p p-32p hover:bg-primary hover:border-primary group transition-1">
                    <span
                      class="shrink-0 size-60p bg-primary group-hover:bg-n-800 icon-32 text-n-800 group-hover:text-primary rounded-full flex-c transition-1">
                      <i class="ph ph-envelope-open"></i>
                    </span>
                    <div class="text-white group-hover:text-n-800 transition-1">
                      <h4 class="text-24 mb-3">
                        Email Address
                      </h4>
                      <a href="mailto:info@exchme.com" class="text-base not-italic mb-2 block">
                        info@exchme.com <sl-copy-button value="info@exchme.com"
                        copy-label="Copy !" success-label="Copied !"></sl-copy-button>
                      </a>
                      <a href="mailto:example@gmail.com" class="text-base not-italic">
                        support@exchme.com <sl-copy-button value="support@exchme.com"
                          copy-label="Copy !" success-label="Copied !"></sl-copy-button>
                      </a>
                    </div>
                  </div>
                  <a target="_blank"
                    href="https://api.whatsapp.com/send/?phone=7679136043&text&type=phone_number&app_absent=0"
                    class="block">
                    <div
                      class="card-1 flex max-lg:flex-wrap max-md:flex-nowrap items-center gap-24p p-32p hover:bg-primary hover:border-primary group transition-1">
                      <span
                        class="shrink-0 size-60p bg-primary group-hover:bg-n-800 icon-32 text-n-800 group-hover:text-primary rounded-full flex-c transition-1">
                        <i class="ph ph-phone-call"></i>
                      </span>
                      <div class="text-white group-hover:text-n-800 transition-1 flex flex-col justify-center">
                        <h4 class="text-24 mb-3 text-center">
                          Whatsapp
                        </h4>
                        <span class="text-base not-italic mb-2 block text-center">
                          Click to connect !
                        </span>
                      </div>
                    </div>
                  </a>


                </div>
              </div>


              <div class="xl:col-span-8 lg:col-span-7">
                <form action="/contact-us" method="post" class="card-1 p-32p">
                  <div class="border-b border-dashed border-white border-opacity-50 sm:pb-6 pb-4">
                    <h4 class="text-24 text-white">
                      Get In Touch
                    </h4>
                  </div>
                  <div class="grid grid-cols-1 gap-24p sm:my-6 my-4">
                    <div class="input-outline">
                      <input class="py-16p px-6" autocomplete="off" type="text" name="name" id="name"
                        placeholder="Enter your name..." required>
                      <label for="name">Your name</label>
                    </div>
                    <div class="input-outline">
                      <input class="py-16p px-6" autocomplete="off" name="email" type="email" id="email"
                        placeholder="Enter your email" required>
                      <label for="number">Your email</label>
                    </div>
                    <div class="input-outline">
                      <input class="py-16p px-6" autocomplete="off" type="text"  name="subject" id="subject"
                        placeholder="Enter your subject..." required>
                      <label for="email">Subject</label>
                    </div>
                    <div class="input-outline">
                      <div class="textarea">
                        <textarea class="w-full h-30 py-16p px-6" name="message" id="message" placeholder="Say something..."
                          required></textarea>
                        <label for="message">Enter message</label>
                      </div>
                    </div>
                  </div>
                  <button type="submit" class="btn-md btn-primary">
                    Send Message
                  </button>
                </form>

                <script>
                  function sendEmail(event) {
                    event.preventDefault();
                    const name = document.getElementById('name').value;
                    const number = document.getElementById('number').value;
                    const email = document.getElementById('email').value;
                    const message = document.getElementById('message').value;
                    const subject = encodeURIComponent('From exchme.com website');
                    const body = encodeURIComponent(
                      `Name: ${name}\nNumber: ${number}\nEmail: ${email}\nMessage: ${message}`
                    );
                    const mailtoLink = `mailto:support@exxchme.com?subject=${subject}&body=${body}`;
                    window.open(mailtoLink, '_blank');
                  }
                </script>
              </div>
            </div>
          </div>
        </section>
        <!--  section end -->


      </main>
      <!-- main end -->
          <!-- footer one start -->
          <%- include('./partials/footer') %>;

            <!-- footer one end -->


</body>

</html>