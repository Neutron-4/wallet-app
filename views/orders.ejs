<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Transactions</title>
  <link rel="stylesheet" href="/styles/admin.css">
  <style>
    .modal {
      display: none;
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0, 0, 0, 0.4);
      padding-top: 60px;
    }

    .modal-content {
      background-color: #fefefe;
      margin: 5% auto;
      padding: 20px;
      border: 1px solid #888;
      width: 80%;
      max-width: 600px;
      border-radius: 8px;
    }

    .close-button {
      color: #aaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
    }

    .close-button:hover,
    .close-button:focus {
      color: black;
      text-decoration: none;
      cursor: pointer;
    }

    .btn-delete {
      background-color: red;
      color: white;
    }

    .btn-delete:hover {
      background-color: darkred;
    }

    .button-container {
      margin-bottom: 20px;
      text-align: left;
    }

    /* Pagination Styles */
    .pagination {
      margin: 20px 0;
      display: flex;
      justify-content: center;
      gap: 15px;
    }

    .pagination a {
      padding: 8px 16px;
      border: 1px solid #ccc;
      text-decoration: none;
      color: #007bff;
      border-radius: 5px;
    }

    .pagination a:hover {
      background-color: #007bff;
      color: white;
    }

    .pagination span {
      padding: 8px 16px;
      border: 1px solid #ccc;
      border-radius: 5px;
      color: #333;
    }

    #status {
      transition: background-color 0.3s ease, transform 0.3s ease;
      padding: 5px 10px;
      border-radius: 5px;
      color: white;
      font-weight: bold;
    }

    /* Status Classes */
    .complete {
      background-color: #28a745;
      /* Green */
    }

    .denied {
      background-color: #dc3545;
      /* Red */
    }

    .pending {
      background-color: #ffc107;
      /* Yellow */
    }

    /* Hover effect */
    #status:hover {
      cursor: pointer;
    }

    #previewProof {
      position: fixed;
      overflow: auto;
      top: 50%;
      left: 50%;
      width: 80%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.7);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 9999;
      padding: 10px;
      box-sizing: border-box;
      transform: translate(-50%, -50%);
    }

    #previewProof img {
      max-width: 80%;
      max-height: 90%;
      padding: 0 10px;
      object-fit: contain;
    }

    .popup-content {
      width: 80%;
      height: 80%;
      position: relative;
      background: white;
      padding: 20px;
      border-radius: 10px;
      max-width: 90%;
      max-height: 80%;
      overflow: auto;
    }

    .close-btn {
      color: red;
      position: absolute;
      top: 10px;
      right: 10px;
      font-size: 30px;
      background: none;
      border: none;
      cursor: pointer;
      z-index: 10;
    }

    .close-btn:hover {
      color: red;
    }

    #status-change {
      display: none;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      z-index: 1000;
      width: 80%;
      max-width: 500px;
    }

    #status-change form {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    #status-change select,
    #status-change textarea,
    #status-change button {
      padding: 10px;
      font-size: 16px;
      border-radius: 5px;
      border: 1px solid #ccc;
    }

    #status-change button {
      background-color: #4CAF50;
      color: white;
      cursor: pointer;
      border: none;
    }

    #status-change button:hover {
      background-color: #45a049;
    }

    #status-change textarea {
      min-height: 100px;
    }

    #status-change select {
      font-size: 16px;
    }
  </style>
</head>

<body>
  <div class="sidebar">
    <div class="brand">
      <a href="/admin/dashboard">
        <h1>EXCHME Website</h1>
      </a>
    </div>
    <nav>
      <ul>
        <li><a href="/admin/update-payment-methods">Payment Methods</a></li>
        <li><a href="/admin/users">Users</a></li>
        <li><a href="/admin/transactions">Transactions</a></li>
        <li><a href="/admin/orders">Orders</a></li>
        <li><a href="/admin/currencyrate">Currency Rate</a></li>
        <li><a href="/admin/posts">Posts</a></li>
        <li><a href="/admin/offers">Offers</a></li>
        <li><a href="/admin/refferal-details">Referral Commisions</a></li>
        <li><a href="/admin/setting">Setting</a></li>
      </ul>
    </nav>
  </div>

  <div class="main-content">
    <header>
      <h2>Orders</h2>
      <div class="button-container">
        <!-- <button class="btn-delete" onclick="openDeleteModal()">Delete Order</button> -->
      </div>
    </header>

    <div id="previewProof" style="display: none;"></div>
    <div id="status-change" class="status-change" style="display: none;"></div>

    <table>
        <thead>
            <tr>
                <th>Transaction ID</th>
                <th>Type</th>
                <th>Purchased Date</th>
                <th>Username</th>
                <th>Amount</th>
                <th>Product Name</th>
                <th>Expiry Date</th>
                <th>Quantity</th>
                <th>Payment Method</th>
                <th>Proof</th>
                <th>Status</th>
                <th>Remark</th>
            </tr>
        </thead>
        <tbody>
            <% if (transactions.length > 0) { %>
                <% transactions.forEach((transaction) => { %>
                    <tr id="row-<%= transaction.transaction_id %>">
                        <td><%= transaction.transaction_id %></td>
                        <td><%= transaction.type || 'N/A' %></td>
                        <td><%= transaction.uploaded_date || 'N/A' %> <br><%= transaction.uploaded_time || 'N/A' %></td>
                        <td><%= transaction.username || 'N/A' %></td>
                        <td><%= transaction.amount || 'N/A' %></td>
                        <td><%= transaction.title || 'No title' %></td>
                        <td><%= transaction.expiry_date || 'N/A' %> <br><%= transaction.expiry_time || 'N/A' %></td>
                        <td><%= transaction.quantity || 'N/A' %></td>
                        <td><%= transaction.payment_method || 'N/A' %></td>
                        <td>
                            <% if (transaction.proof) { %>
                                <button onclick="showProof('<%= transaction.proof %>')">View Proof</button>
                            <% } else { %>
                                No Proof
                            <% } %>
                        </td>
                        <td>
                            <button id="status" class="<%= (transaction.product_status||'Pending').toLowerCase() %>"
                              <%= transaction%>
                                    onclick="changeStatus('<%= transaction.transaction_id %>', '<%= transaction.status %>', '<%= transaction.remark %>')">
                                <%= transaction.product_status ||'Pending' %>
                            </button>
                        </td>
                        <td><%= transaction.remark || 'No remarks' %></td>
                    </tr>
                <% }) %>
                
            <% } else { %>
                <tr>
                    <td colspan="12">No transactions found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <!-- Pagination -->
    <div class="pagination">
        <% if (currentPage> 1) { %>
          <a href="/admin/orders?page=<%= currentPage - 1 %>">&laquo; Previous</a>
          <% } %>
  
            <span>Page <%= currentPage %> of <%= totalPages %></span>
  
            <% if (currentPage < totalPages) { %>
              <a href="/admin/orders?page=<%= currentPage + 1 %>">Next &raquo;</a>
              <% } %>
      </div>
    

  <!-- Modal for Deleting Transaction -->
  <div id="deleteTransactionModal" class="modal">
    <div class="modal-content">
      <span class="close-button">&times;</span>
      <form action="/admin/delete-transaction" method="POST">
        <label for="transactionId">Transaction ID:</label>
        <input type="text" id="transactionId" name="transactionId" required />
        <button type="submit" class="btn-delete">Delete Transaction</button>
      </form>
    </div>
  </div>

  <script>
    function showProof(path) {
      document.getElementById('previewProof').innerHTML = `
        <button class="close-btn" onclick="closeProof()">×</button>
        <img src="/uploads/${path}"></img>      
      `;
      document.getElementById('previewProof').style.display = 'block';
    }

    function changeStatus(rowId, status, remark) {
      document.getElementById('status-change').style.display = 'flex';
      document.getElementById('status-change').innerHTML = `
        <button class="close-btn" onclick="closeProof()">×</button>
        <form action="/admin/update-order/${rowId}" method="POST" class="status-update-form">
          <select name="status" required>
            <option value="Pending" ${status === 'Pending' ? 'selected' : ''}>Pending</option>
            <option value="Complete" ${status === 'Complete' ? 'selected' : ''}>Complete</option>
            <option value="Denied" ${status === 'Denied' ? 'selected' : ''}>Denied</option>
          </select>
          <textarea name="remark" cols="50" id="update-remark">${remark}</textarea>
          <button type="submit">Update</button>
        </form>
      `;
    }

    function closeProof() {
      document.getElementById('previewProof').style.display = 'none';
      document.getElementById('status-change').style.display = 'none';
    }

    function openDeleteModal() {
      document.getElementById('deleteTransactionModal').style.display = 'block';
    }

    document.querySelector('.close-button').addEventListener('click', function () {
      document.getElementById('deleteTransactionModal').style.display = 'none';
    });
  </script>
</body>

</html>