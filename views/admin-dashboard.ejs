<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/styles/admin.css">
  <style>
    .dashboard-stats {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 20px;
      margin-top: 50px;
    }
  
    .stat {
      background-color: #f9f9f9;
      border: 1px solid #ddd;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      width: 200px;
      text-align: center;
      padding: 20px;
      font-family: Arial, sans-serif;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
  
    .stat h3 {
      font-size: 18px;
      color: #333;
      margin-bottom: 10px;
    }
  
    .stat p {
      font-size: 24px;
      font-weight: bold;
      color: #007bff;
    }
  
    .stat:hover {
      transform: translateY(-10px);
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .monthly-deposit, .completed-deposits {
      margin-top: 50px;
      padding: 20px;
      background-color: #f9f9f9;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      width: 48%; /* Adjust width to 48% for both sections */
    }

    .monthly-completed-container {
      display: flex;
      justify-content: space-between;
      gap: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    table th, table td {
      padding: 10px;
      text-align: left;
      border: 1px solid #ddd;
    }

    table th {
      color: black;
      background-color: #f8f8f8;
    }

    table tr:nth-child(even) {
      background-color: #f9f9f9;
    }

    p {
      font-size: 18px;
      color: #666;
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <div class="sidebar">
    <div class="brand">
      <a href="/admin/dashboard">
        <h1>EXCHME Website</h1>
      </a>
    </div>
    <nav>
      <ul>
        <li><a href="/admin/update-payment-methods">Payment Methods</a></li>
        <li><a href="/admin/users">Users</a></li>
        <li><a href="/admin/transactions">Transactions</a></li>
        <li><a href="/admin/orders">Orders</a></li>
        <li><a href="/admin/currencyrate">Currency Rate</a></li>
        <li><a href="/admin/posts">Posts</a></li>
        <li><a href="/admin/offers">Offers</a></li>
        <li><a href="/admin/refferal-details">Referral Commisions</a></li>
        <li><a href="/admin/setting">Setting</a></li>
      </ul>
    </nav>
  </div>

  <!-- Main Content -->
  <div class="main-content">

    <!-- Dashboard Stats -->
    <div class="dashboard-stats">
      <div class="stat">
        <h3>Total Users</h3>
        <p><%= totalUsers %></p>
      </div>
      <div class="stat">
        <h3>Total Transactions</h3>
        <p><%= data.length %></p>
      </div>
      <div class="stat">
        <h3>Total Complete Deposits</h3>
        <p><%= totalDeposits %></p>
      </div>
      <div class="stat">
        <h3>Total Complete Withdraws</h3>
        <p><%= totalWithdrawals %></p>
      </div>
    </div>

    <!-- Monthly Deposits & Completed Deposits Side-by-Side -->
    <div class="monthly-completed-container">
      <!-- Monthly Deposits Section -->
      <div class="monthly-deposit">
        <h2>Total Deposits by Month</h2>

        <!-- Date Range Selection for Monthly Deposits -->
        <form id="monthly-deposit-date-range" method="GET" action="">
          <label for="start-date">Start Date:</label>
          <input type="date" id="start-date" name="start-date" value="<%= startDate %>" />
          <label for="end-date">End Date:</label>
          <input type="date" id="end-date" name="end-date" value="<%= endDate %>" />
          <button type="submit">Apply</button>
        </form>

        <% if (deposits.length > 0) { %>
          <table>
            <thead>
              <tr>
                <th>User Name</th>
                <th>Total Deposit Amount</th>
              </tr>
            </thead>
            <tbody>
              <% deposits.forEach(deposit => { %>
                <tr>
                  <td><%= deposit.username %></td>
                  <td>â‚¹<%= deposit.totalAmount.toFixed(2) %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <p>No deposits for this month yet.</p>
        <% } %>
      </div>

      <!-- Completed Deposits Section -->
      <div class="completed-deposits">
        <h2>Completed Deposits by Month</h2>

        <!-- Date Range Selection for Completed Deposits -->
        <form id="completed-deposit-date-range" method="GET" action="">
          <label for="start-date-completed">Start Date:</label>
          <input type="date" id="start-date-completed" name="start-date-completed" value="<%= startDateCompleted %>" />
          <label for="end-date-completed">End Date:</label>
          <input type="date" id="end-date-completed" name="end-date-completed" value="<%= endDateCompleted %>" />
          <button type="submit">Apply</button>
        </form>

        <% if (completedDeposits.length > 0) { %>
          <table>
            <thead>
              <tr>
                <th>User Name</th>
                <th>Completed Deposit Count</th>
              </tr>
            </thead>
            <tbody>
              <% completedDeposits.forEach(deposit => { %>
                <tr>
                  <td><%= deposit.username %></td>
                  <td><%= deposit.depositCount %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <p>No completed deposits for this month yet.</p>
        <% } %>
      </div>
    </div>

  </div>
  
</body>
</html>
