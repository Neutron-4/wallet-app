<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/styles/admin.css">
  <style>
    .dashboard-stats {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 20px;
      margin-top: 50px;
    }

    .stat {
      background-color: #f9f9f9;
      border: 1px solid #ddd;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      width: 200px;
      text-align: center;
      padding: 20px;
      font-family: Arial, sans-serif;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .stat h3 {
      font-size: 18px;
      color: #333;
      margin-bottom: 10px;
    }

    .stat p {
      font-size: 24px;
      font-weight: bold;
      color: #007bff;
    }

    .stat:hover {
      transform: translateY(-10px);
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }
  </style>


</head>

<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <div class="brand">
      <a href="/admin/dashboard">
        <h1>EXCHME Website</h1>
      </a>
    </div>
    <nav>
      <ul>
        <li><a href="/admin/update-payment-methods">Payment Methods</a></li>
        <li><a href="/admin/users">Users</a></li>
        <li><a href="/admin/transactions">Transactions</a></li>
        <li><a href="/admin/orders">Orders</a></li>
        <li><a href="/admin/currencyrate">Currency Rate</a></li>
        <li><a href="/admin/posts">Posts</a></li>
        <li><a href="/admin/offers">Offers</a></li>
        <li><a href="/admin/refferal-details">Referral Commisions</a></li>
        <li><a href="/admin/setting">Setting</a></li>
      </ul>
    </nav>
  </div>


  <div class="main-content">
    <header>
      <h2>Set Currency Rate</h2>
    </header>
    <section class="currencyrate-changer">
      <form action="/admin/currencyrate" method="POST" class="currencyrate-form">
        <div class="currencyrate">
          <% rates.forEach(element=> { %>
            <p>
              <% if (element.paymentType=='Withdraw' ) { %>
                <label for="<%= element.cName %>_withdrawRate">1 <%= element.cName %> Price ( Withdraw)</label>
                <input type="number" step="0.01" value="<%= element.cRate %>" id="<%= element.cName %>_withdrawRate"
                  name="<%= element.cName %>_withdrawRate" required>
                <% } else {%>
                  <label for="<%= element.cName %>_depositRate">1 <%= element.cName %> Price ( Deposit)</label>
                  <input type="number" step="0.01" value="<%= element.cRate %>" id="<%= element.cName %>_depositRate"
                    name="<%= element.cName %>_depositRate" required>


                  <% } %>

                    <% }) %>
        </div>
        <button type="submit" class="save-button">Save Changes</button>
      </form>
    </section>

  </div>
</body>

</html>